{
  "compilerOptions": {
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "target": "ES6",
    "module": "ESNext",
    "baseUrl": ".",
    "paths": {
      "~services/*": [
        "./src/services/*"
      ],
      "~elements/*": [
        "./src/elements/*"
      ],
      "~helpers/*": [
        "./src/helpers/*"
      ],
      "~styles/*": [
        "./src/assets/styles/*"
      ],
      "~redux/*": [
        "./src/redux/*"
      ],
      "~src/*": [
        "./src/*"
      ]
    },
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ],
  },
  "exclude": [
    "node_modules",
    "build"
  ],
  "include": [
    "src",
    "."
  ]
}